{{#if books}}    
    {{#if writersArray}}
        <h2>Βιβλία</h2>
    {{/if}}
    <article class="query-books">
        <div class="book-container">
            {{#each books}}
            <div class="book-box">
                <a class="book-link" href="/book/{{this.book_id}}">
                    <img src="images/db-images/{{this.image}}" alt="Εξώφυλλο βιβλίου" class="book-image">
                    <div class="icon-box">
                        <input id="heart{{this.book_id}}" type="checkbox" class="heart-input" {{#if this.fav}}checked{{/if}}/>
                        <label for="heart{{this.book_id}}" ><i class="fa fa-heart" aria-hidden="true"></i></label>
                        <button class="fa cart-button" id="add-cart{{this.book_id}}">&#xf07a;</button>
                    </div>
                </a>
                <div class="book-info">
                    <div>
                        <a class="book-title" href="/book/{{this.book_id}}">{{this.title}}</a>
                    </div>
                    <div>
                        {{#each this.writers}}
                            <a class="red-link" href="/writer/{{this.id}}">{{this.name}}</a>
                        {{/each}}
                    </div>
                    <span class="prices">
                        <span {{#if this.realPrice}} class="old-price"{{/if}}>{{this.price}}&#8364;</span>
                            {{#if this.realPrice}}
                                <br><span>{{this.realPrice}}&#8364;</span>
                            {{/if}}
                    </span>
                </div>
                        
            </div>
            {{/each}}
        </div>
    </article>

{{/if}}
{{#if writersArray}}
    {{#if books}}
        <h2>Συγγραφείς</h2>
    {{/if}}
    <article class="query-writers">
    {{#each writersArray}}
        <div>
            <a class="red-link-link" href="/writer/{{this.writer_id}}">
                {{#if this.image}}
                <img src="images/db-images/{{this.image}}" alt="Φωτογραφία Συγγραφέα" class="red-link-image">
                {{/if}}
                {{#unless this.image}}
                <img src="images/generic-person-icon.png" alt="Φωτογραφία Συγγραφέα" class="red-link-image">
                {{/unless}}
            </a>
            <a class="red-link" href="/writer/{{this.writer_id}}">{{this.name}}</a>
        </div>
    {{/each}}
    </article>
{{/if}}

<div id="product-added-alert">
      Το προϊόν προστέθηκε επιτυχώς!
    </div>